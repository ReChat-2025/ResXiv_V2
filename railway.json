{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE"
  },
  "services": {
    "backend": {
      "source": {
        "repo": ".",
        "rootDirectory": "/backend/resxiv_backend"
      },
      "variables": {
        "SECRET_KEY": "railway-demo-secret-key-for-investors",
        "JWT_SECRET_KEY": "railway-demo-jwt-secret-key",
        "ENVIRONMENT": "production",
        "DEBUG": "false",
        "CORS_ORIGINS": "https://${{RAILWAY_PUBLIC_DOMAIN}},http://localhost:3000",
        "DATABASE_URL": "${{DATABASE_URL}}",
        "REDIS_URL": "${{REDIS_URL}}",
        "MONGODB_URL": "${{MONGODB_URL}}",
        "PORT": "8000"
      },
      "postBuild": "python3 migrate_data.py"
    },
    "frontend": {
      "source": {
        "repo": ".",
        "rootDirectory": "/frontend"
      },
      "variables": {
        "NEXT_PUBLIC_API_URL": "https://backend-${{RAILWAY_PROJECT_NAME}}.up.railway.app",
        "NODE_ENV": "production"
      }
    }
  }
} 