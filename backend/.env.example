# ==============================================================================
# ResXiv V2 Backend Environment Variables
# ==============================================================================

# Database Configuration
DATABASE_URL=postgresql://resxiv_user:your_password@localhost:5432/resxiv_v2
MONGODB_URL=mongodb://localhost:27017/resxiv_v2
REDIS_URL=redis://localhost:6379/0

# Authentication & Security
SECRET_KEY=your-super-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AI Integration
OPENAI_API_KEY=sk-your-openai-api-key-here
LANGSMITH_API_KEY=your-langsmith-api-key-here
LANGSMITH_PROJECT=resxiv-v2

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@resxiv.com

# File Storage & Processing
UPLOAD_DIR=./uploads
REPOSITORIES_DIR=./repositories
MAX_UPLOAD_SIZE=50000000
ALLOWED_EXTENSIONS=pdf,tex,bib,png,jpg,jpeg

# Research APIs
ARXIV_API_BASE=http://export.arxiv.org/api
OPENALEX_API_BASE=https://api.openalex.org
CROSSREF_API_BASE=https://api.crossref.org
PAPERS_WITH_CODE_API_BASE=https://paperswithcode.com/api/v1

# Application Configuration
APP_NAME=ResXiv V2 Backend
APP_VERSION=2.0.0
DEBUG=false
ENVIRONMENT=development

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# LaTeX Compilation
LATEX_COMPILE_TIMEOUT=300
LATEX_ENGINE=pdflatex
LATEX_OUTPUT_DIR=./compilations

# Git Configuration
GIT_DEFAULT_BRANCH=main
GIT_USER_NAME=ResXiv System
GIT_USER_EMAIL=system@resxiv.com
